{
  "name": "/workspace",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "clean": "bun exec rimraf node_modules out",
    "install:ci": "bun install --no-frozen-lockfile",
    "test": "vitest run --config vitest.config.js",
    "test:watch": "vitest --config vitest.config.js",
    "test:ui": "vitest --ui --config vitest.config.js",
    "test:coverage": "vitest run --coverage --config vitest.config.js",
    "test:contracts": "hardhat test",
    "format": "prettier --write '**/**/*.{ts,tsx,js,jsx,css}'",
    "format_check": "prettier --check '**/**/*.{ts,tsx,js,jsx,css}'",
    "lint_text": "textlint \"**/*.md\"",
    "lint_text_fix": "textlint \"**/*.md\" --fix",
    "lint-staged": "lint-staged",
    "husky": "husky install",
    "start": "next start",
    "build": "next build",
    "dev": "next dev",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0",
    "husky": "^9.1.4",
    "textlint": "^14.0.5",
    "prettier": "^3.3.0",
    "rimraf": "^6.0.1",
    "@textlint-ja/textlint-rule-preset-ai-writing": "^1.6.1",
    "textlint-rule-ja-no-abusage": "^3.0.0",
    "textlint-rule-ja-no-inappropriate-words": "^2.0.0",
    "textlint-rule-no-double-negative-ja": "^2.0.1",
    "textlint-rule-no-dropping-the-ra": "^3.0.0",
    "textlint-rule-prefer-tari-tari": "^1.0.3",
    "textlint-rule-preset-ja-spacing": "^2.2.0",
    "textlint-rule-preset-ja-technical-writing": "^10.0.1",
    "textlint-rule-spellcheck-tech-word": "^5.0.0"
  }
}

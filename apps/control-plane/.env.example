# NextAuth.js Configuration
# Generate a secret: openssl rand -base64 32
AUTH_SECRET=your-secret-key-change-me

# NextAuth.js URL (for development)
AUTH_URL=http://localhost:13000

# Authentication Skip Mode (Development Only)
# Set to "1" to bypass Auth0 authentication with a mock session
# WARNING: Only use for local development, never in production
# AUTH_SKIP=1

# Auth0 Configuration
# Get these from your Auth0 Dashboard > Applications > Your App
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_ISSUER=https://your-tenant.auth0.com

# Auth0 Custom Claims Namespace (for roles, permissions)
# Configure in Auth0 Actions or Rules
AUTH0_NAMESPACE=https://tenkacloud.com

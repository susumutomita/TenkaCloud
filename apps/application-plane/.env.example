# NextAuth.js Configuration
# Generate a secret: openssl rand -base64 32
AUTH_SECRET=your-secret-key-change-me

# NextAuth.js URL (for development)
AUTH_URL=http://localhost:3001

# Auth0 Configuration
# Get these from your Auth0 Dashboard > Applications > Your App
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_ISSUER=https://your-tenant.auth0.com

# Auth0 Custom Claims Namespace (for roles, tenant, team)
# Configure in Auth0 Actions or Rules
AUTH0_NAMESPACE=https://tenkacloud.com

# AWS Configuration for STS Federation
AWS_REGION=ap-northeast-1

# Participant Role ARN (per-tenant configuration in production)
# This role allows participants to access their sandbox environment
# AWS_PARTICIPANT_ROLE_ARN=arn:aws:iam::123456789012:role/TenkaCloudParticipantRole

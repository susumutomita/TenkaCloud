{
  "name": "@tenkacloud/provisioning-lambda",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "esbuild src/handler.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --external:@aws-sdk/*",
    "package": "cd dist && zip -r ../lambda.zip .",
    "deploy": "bun run build && bun run package",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.750.0",
    "@aws-sdk/client-eventbridge": "^3.750.0",
    "@aws-sdk/lib-dynamodb": "^3.750.0",
    "@aws-sdk/util-dynamodb": "^3.750.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "^22.10.2",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
